{
  "name": "trends",
  "private": true,
  "version": "1.0.0",
  "description": "Chinese news hot topic aggregator and analysis tool",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:mcp": "./scripts/dev.sh --mcp-only",
    "dev:crawl": "./scripts/dev.sh --crawl-only",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:worker": "cd apps/worker && uv run uvicorn main:app --reload --port 8000",
    "check": "bun run check:typecheck && bun run check:lint",
    "check:typecheck": "bun run --filter '@trends/*' typecheck",
    "check:lint": "bun run --filter '@trends/web' --filter '@trends/browser-extension' lint",
    "check:build": "bun run --filter '@trends/*' build",
    "test": "vitest run",
    "verify:critical-path": "tsx scripts/verify-critical-path.ts",
    "e2e": "tsx scripts/e2e-smoke.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptdevhk/trends.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.0.10",
    "playwright": "^1.58.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0",
    "yaml": "^2.8.2"
  }
}