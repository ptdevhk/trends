{
  "name": "trends",
  "private": true,
  "version": "1.0.0",
  "description": "Chinese news hot topic aggregator and analysis tool",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:mcp": "./scripts/dev.sh --mcp-only",
    "dev:crawl": "./scripts/dev.sh --crawl-only",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:worker": "cd apps/worker && uv run uvicorn main:app --reload --port 8000",
    "check": "bun run check:typecheck && bun run check:lint",
    "check:typecheck": "bun run --filter '@trendradar/*' typecheck",
    "check:lint": "bun run --filter '@trendradar/web' lint",
    "check:build": "bun run --filter '@trendradar/*' build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptdevhk/trends.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.10",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
