# .env.example - Template for ~/.secrets/com.trends.app.env
# cp .env.example ~/.secrets/com.trends.app.env
# chmod 600 ~/.secrets/com.trends.app.env

# =============================================================================
# REQUIRED SECRETS (only these need to be set)
# =============================================================================

# AI Configuration (required for AI analysis features)
AI_API_KEY=sk-...
AI_MODEL=deepseek/deepseek-chat
# AI_API_BASE=  # Optional: custom API endpoint

# =============================================================================
# NOTIFICATION CHANNELS (at least one recommended)
# =============================================================================

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Feishu (Lark)
FEISHU_WEBHOOK_URL=

# DingTalk
DINGTALK_WEBHOOK_URL=
DINGTALK_SECRET=

# WeChat Work
WEWORK_WEBHOOK_URL=

# Email
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Slack
SLACK_WEBHOOK_URL=

# Bark (iOS)
BARK_URL=

# ntfy
NTFY_URL=
NTFY_TOPIC=

# Generic Webhook
GENERIC_WEBHOOK_URL=
GENERIC_WEBHOOK_METHOD=POST

# =============================================================================
# REMOTE STORAGE (optional - for multi-node sync)
# =============================================================================

# S3-compatible storage (Cloudflare R2, AWS S3, MinIO, etc.)
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=auto

# =============================================================================
# OPTIONAL OVERRIDES (defaults from packages/config/constants.py)
# =============================================================================

# Core settings
DEBUG=false
TIMEZONE=Asia/Shanghai

# Crawler settings
# REQUEST_INTERVAL=0.5
# RANK_THRESHOLD=50
# REPORT_MODE=incremental

# AI settings
AI_ANALYSIS_ENABLED=true
# AI_ANALYSIS_WINDOW_START=06:00
# AI_ANALYSIS_WINDOW_END=23:00

# MCP Server
# MCP_PORT=3333

# Storage
# STORAGE_BACKEND=auto
# OUTPUT_DIR=output
